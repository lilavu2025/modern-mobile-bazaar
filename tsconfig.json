{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["react", "react-native"],  // ✅ مهم جداً
    "jsx": "react-native",               // ✅ مطلوب لملفات JSX/TSX
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/@tanstack/react-query/build/lib",
    "node_modules/@tanstack/react-query/src",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
